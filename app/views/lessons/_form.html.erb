<%= form_with(model: lesson, data: { turbo_frame: "lessons" }) do |form| %>
  <%= form.hidden_field :trail_id, value: params[:trail_id] || lesson.trail_id %>

  <div class="mb-4">
    <%= form.label :title, class: "block font-medium mb-1" %>
    <%= form.text_field :title, class: "w-full border-gray-300 rounded-md shadow-sm" %>
  </div>

  <div class="mb-4">
    <%= form.label :content, class: "block font-medium mb-1" %>
    <%= form.text_area :content, rows: 5, class: "w-full border-gray-300 rounded-md shadow-sm" %>
  </div>

  <%= form.submit "Salvar", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
<% end %>
