<%= turbo_frame_tag "modal" do %>
  <div class="fixed inset-0 bg-gradient-to-br from-purple-600/20 via-blue-500/10 to-indigo-400/20 z-50 flex items-center justify-center backdrop-blur-sm">
    <div class="bg-white bg-gradient-to-br from-white to-gray-50 rounded-2xl p-6 w-full max-w-xl shadow-xl relative border border-gray-200">
      <h2 class="text-2xl font-bold mb-6 text-gray-800">Novo MÃ³dulo</h2>

      <%= form_with model: @lesson, url: lessons_path, method: :post, data: { turbo_frame: "lessons" } do |f| %>

        <div class="mb-4">
          <%= f.label :title, class: "block font-medium mb-1" %>
          <%= f.text_field :title, class: "w-full border-gray-300 rounded-md" %>
        </div>

        <div class="mb-4">
          <%= f.label :content, class: "block font-medium mb-1" %>
          <%= f.text_area :content, class: "w-full border-gray-300 rounded-md" %>
        </div>
        <%= f.hidden_field :trail_id, value: @lesson.trail_id || params[:trail_id] %>
        <div class="flex justify-end gap-3 mt-6">
          <%= f.submit "Salvar", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>