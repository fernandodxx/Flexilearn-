<%= form_with model: @user, local: true, html: { class: "max-w-xl mx-auto bg-white p-6 rounded-lg shadow-md space-y-6" } do |form| %>
  <h1 class="text-2xl font-bold text-gray-800">Editar Perfil</h1>

  <div>
    <%= form.label :name, "Nome", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :name, class: "w-full focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div>
    <%= form.label :bio, "Bio", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_area :bio, rows: 4, class: "w-full focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div>
    <%= form.label :twitter, "Twitter", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :twitter, placeholder: "@seuusuario", class: "w-full focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div>
    <%= form.label :github, "GitHub", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :github, placeholder: "seuusuario", class: "w-full focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div>
    <%= form.label :avatar, "Avatar", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.file_field :avatar, class: "w-full focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="flex justify-end">
    <%= form.submit "Salvar", class: "px-5 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition" %>
  </div>
<% end %>