<% content_for :title, "Detalhes da Trilha" %>

<div class="max-w-4xl mx-auto p-6 bg-white rounded-lg shadow-lg">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice">
      <%= notice %>
    </p>
  <% end %>

  <h1 class="font-bold text-4xl text-gray-800 mb-4"><%= @trail.title %></h1>
  <p class="text-lg text-gray-600 mb-8"><%= @trail.description %></p>

  <div class="flex items-center gap-4 mb-8">
    <%= link_to "Editar", edit_trail_path(@trail), 
        class: "bg-blue-600 text-white px-5 py-2 rounded-md hover:bg-blue-700 transition" %>

    <%= link_to "Voltar", trails_path, 
        class: "text-blue-600 hover:text-blue-800 font-medium" %>

    <%= button_to "Excluir", @trail,
        method: :delete,
        form_class: "inline",
        data: { turbo_confirm: "Tem certeza que deseja excluir esta trilha?" },
        class: "px-5 py-2 bg-red-600 text-white hover:bg-red-500 rounded-md font-medium transition" %>
  </div>

  <h2 class="text-2xl font-semibold text-gray-800 mb-6">M贸dulos da Trilha</h2>

  <div class="mb-4">
    <%= link_to "Adicionar Novo M贸dulo", new_lesson_path(trail_id: @trail.id), 
        data: { turbo_frame: "modal" }, class: "bg-green-600 text-white px-5 py-2 rounded-md hover:bg-green-700 transition" %>
  </div>

  <%= turbo_frame_tag "lessons" do %>
    <% if @trail.lessons.any? %>
      <div class="space-y-4">
        <% @trail.lessons.each do |lesson| %>
          <div class="flex justify-between items-center bg-gray-100 p-4 rounded-lg">
            <div class="flex-1">
              <strong class="text-gray-700"><%= lesson.title %></strong>
              <p class="text-gray-500 text-sm"><%= lesson.content %></p>
            </div>
            <div class="flex items-center gap-2">
              <%= link_to "Editar", edit_lesson_path(lesson), 
                  class: "text-blue-600 hover:text-blue-800" %>

              <%= button_to "Excluir", lesson, 
                  method: :delete, 
                  data: { turbo_confirm: "Tem certeza que deseja excluir este m贸dulo?" },
                  class: "text-red-600 hover:text-red-800" %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500">Nenhum m贸dulo cadastrado ainda.</p>
    <% end %>
  <% end %>
</div>
